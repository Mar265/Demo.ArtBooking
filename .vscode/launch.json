{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    // For launch file in VSCode and c# check: https://code.visualstudio.com/docs/csharp/debugger-settings
    "version": "0.2.0",
    "configurations": [
        {
            "name": "DEBUG:Backend",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build:Backend",
            "program": "${workspaceFolder}/ArtBooking.Backend/bin/Debug/net8.0/ArtBooking.Backend.dll",
            "args": [],
            "cwd": "${workspaceFolder}/ArtBooking.Backend",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s/swagger/index.html"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "https://localhost:5000" // Specify your port here
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/ArtBooking.Backend/Views"
            }
        },
        {
            "name": "DEBUG:Backend.Auth",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build:Backend.Auth",
            "program": "${workspaceFolder}/ArtBooking.Backend.Auth/bin/Debug/net8.0/ArtBooking.Backend.Auth.dll",
            "args": [],
            "cwd": "${workspaceFolder}/ArtBooking.Backend.Auth",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s/swagger/index.html"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "https://localhost:5800" // Specify your port here
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/ArtBooking.Backend.Auth/Views"
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        },
    ],
    "compounds": [
        {
            "name": "DEBUG:All-Backends",
            "configurations": [
                "DEBUG:Backend",
                "DEBUG:Backend.Auth"
            ]
        }
    ]
}