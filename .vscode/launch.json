{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    // For launch file in VSCode and c# check: https://code.visualstudio.com/docs/csharp/debugger-settings
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".Net DEBUG Artbooking.Backend",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/ArtBooking.Backend/bin/Debug/net8.0/ArtBooking.Backend.dll",
            "args": [],
            "cwd": "${workspaceFolder}/ArtBooking.Backend",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s/swagger/index.html"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "https://localhost:5000"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/ArtBooking.Backend/Views"
            }
        },
        {
            "name": ".Net Attach Artbooking.Backend",
            "type": "coreclr",
            "request": "attach"
        },         
        {
            "name": "Docker DEBUG: Artbooking.Backend",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "docker-run: debug",
            "netCore": {
                "appProject": "${workspaceFolder}/ArtBooking.Backend/ArtBooking.Backend.csproj"
            }
        },
        {
            "name": "Docker Attach (to running container)",
            "type": "docker",
            "request": "attach",
            "platform": "netCore",
            "sourceFileMap": {
                "/src": "${workspaceFolder}"
            }
        },          
    ]
}